.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/journal/Elementa')
        span
          img(src='/images/logo.png' height=50 width=auto)
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.dropdown
          a(data-toggle="dropdown" data-submenu)
            span.caret
            | Articles
          ul.dropdown-menu
            li
              a(href="#") Articles
              a(href="#") Special Features
              a(href="#") Forums
        li.dropdown
          a(data-toggle="dropdown" data-submenu)
            span.caret
            | About
          ul.dropdown-menu
            li
              a(href="#") About Us
            li
              a(href="#") Aims And Scope
            li.dropdown-submenu
              a Knowledge Domains
              ul.dropdown-menu
                li
                  a Atmospheric Science
                  a Earth & Environmental Science
                  a Ecology
                  a Ocean Science
                  a Sustainable Engineering
                  a Sustainability Transitions
            li
              a(href="#") Expertise
            li
              a(href="#") Collaboration
            li
              a(href="#") Publishing
        li.dropdown
          a(data-toggle="dropdown" data-submenu)
            span.caret
            | For Authors
          ul.dropdown-menu
            li
              a(href="#") About Us
        li.dropdown
          a(href="#")
            | Spotlight
        li.dropdown
          a(data-toggle="dropdown" data-submenu)
            span.caret
            | Resources
          ul.dropdown-menu
            li
              a(href="#") About Us
        li(class=(title == 'Contact') ? 'active' : undefined)
          a(href='/contact') Contact
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
